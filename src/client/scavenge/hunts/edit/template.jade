.jumbotron
    h4 Hunt Editor
    form
        .row
            .col-md-3
                label(for="name") Name
            .col-md-9
                input#name.form-control(
                    name="name"
                    placeholder="name"
                    ng-model="hunteditor.hunt.name"
                )
        .row
            .col-md-12
                label(for="scripts") Scripts
                ui-codemirror#scripts(
                    ui-codemirror-opts="{\
                        lineWrapping: false,\
                        lineNumbers: true,\
                        readOnly: false,\
                        mode: 'javascript'\
                    }"
                    ng-model="hunteditor.content"
                )
        .row(ng-show="hunteditor.parses && ! hunteditor.saved.success")
            .col-md-12
                button.btn.btn-primary(
                    type="button"
                    ng-click="hunteditor.save()"
                ) Submit
