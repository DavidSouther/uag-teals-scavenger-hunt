.gradebook
    table.table.table-striped
        thead
            tr
                th Student
                th Intro
                th Strings and Integers
                th Dates and Times
        tbody
            tr(ng-repeat="(student, hunts) in gradebook.service.book")
                td {{student}}
                td(align="right", ng-init="i = hunts['Intro']")
                    b {{ i.grade | letter }},&nbsp;
                    | ({{ i.points }}),&nbsp;
                    | {{ i.grade | number:1 }}
                td(align="right", ng-init="s = hunts['Strings and Integers']")
                    b {{ s.grade | letter }},&nbsp;
                    | ({{ s.points }}),&nbsp;
                    | {{ s.grade | number:1 }}
                td(align="right", ng-init="d = hunts['Dates and Times']")
                    | ({{ s.points }})
    button(ng-click="gradebook.service.rebuild()") Reload Gradebook
